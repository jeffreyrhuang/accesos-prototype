<div class="row no-gutter">
	
	<div class="col-sm-3"></div>
	<div class="col-sm-6">
		<h3>Proyectos:</h3>

		<div id="createbutton">
		<a href="/create" role="button" class="btn btn-success">
		  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Create New
		</a>
		</div>

		{{!-- iterate over ARRAY --}}
		{{#each proyectos}}
		<div class="thumbnail">
			<a class ="thumbnailLink" href="{{_id}}"><span class="tag"></span></a>
      <div class="caption">
        <h5>Name: {{name}}</h5>
        <p>Location: {{location}}</p>
        <p>Asesor: {{asesor}}</p>
        {{!-- <p><a href="#" class="btn btn-primary" role="button">Edit</a></p> --}}
      </div>
    </div>
		{{/each}}
		
	</div>
	<div class="col-sm-3"></div>

</div><!--end of row-->