<div class="row no-gutter">
	
	<h3>Project View:</h3>
	<div class="col-sm-2"></div>
	<div class="col-sm-8 col-xs-12">

	{{#if sessionFlash}}
		<div id="#" class="alert alert-dismissible alert-{{sessionFlash.type}}" role="alert">
			<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			{{{sessionFlash.message}}}
		</div>
	{{/if}}

	{{!-- iterate over OBJECT --}}
	{{#proyecto}}
		<table class="table table-hover">
			<tr><td><b>Name: </b></td><td>{{name}}</td></tr>
			<tr><td><b>Cliente: </b></td><td>{{client}}</td></tr>
			<tr><td><b>Location: </b></td><td>{{location}}</td></tr>
			<tr><td><b>Asesor: </b></td><td>{{asesor}}</td></tr>
			<tr><td><b>Tipo de porton: </b></td><td>{{portonNo}}  {{porton}}</td></tr>
			<tr><td><b>Peso de porton: </b></td><td>{{peso}} {{#if peso}}kg{{/if}}</td></tr>
		</table>
	</div>	
{{!-- 	<p>Photos</p>
	<input class="input-group" type="file" accept="image/*" capture="camera"> --}}

	<div class="col-sm-2"></div>
</div>
<hr>
<div class="row">
	<div class="col-sm-3"></div>
	<div class="col-sm-6">
		<h4>Tools:</h4>
			<a href="/api/proyectos/{{_id}}/peso" class="btn btn-info">Peso Calcular</a>
	</div>
</div>

<hr>

<div class="row">
	<div class="col-sm-3"></div>
	<div class="col-sm-6">
		<h4>Reports:</h4>
		<br>
		<form action="/pdf" method="POST">
			<input type="hidden" name="id" value="{{_id}}">
			{{/proyecto}}
			<div class="form-group">
				<label for="">Send to:</label>
				<input type="email" class="form-control" name="toEmail" value="{{user_email}}">
			</div>
			<button name="pdfGenerator" type="submit" class="btn btn-default">Email Peso Report</button>
			<button name="openPDF" type="submit" formaction="/openPdf" class="btn btn-default">Open Peso Report</button>
		</form>
		
	</div>
</div>	
